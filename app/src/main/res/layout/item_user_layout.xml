<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="user"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/chat_message_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name"
        android:layout_alignStart="@+id/txt_name"
        android:layout_marginTop="8dp"
        android:text="User: Message" />

    <TextView
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/chat_message_preview"
        android:layout_toEndOf="@+id/chat_message_preview"
        android:text="  â€¢  " />

    <TextView
        android:id="@+id/chat_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/chat_message_preview"
        android:layout_toEndOf="@+id/divider"
        android:text="00:00" />

    <View

        android:layout_below="@+id/chat_message_preview"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>


</RelativeLayout>