<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addressCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="6dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/itemImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pin_icon" />

            <TextView
                android:id="@+id/itemAddress1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/itemImage"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="95dp"
                android:layout_toEndOf="@+id/itemImage"
                android:text="Full Address 1"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/itemAddress2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/itemAddress1"
                android:layout_alignStart="@+id/itemAddress1"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="95dp"
                android:layout_marginBottom="10dp"
                android:text="Full Address 2"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/editBtn"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/itemImage"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="300dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/floating_edittextblue"
                android:gravity="center"
                android:text="Edit"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/deleteBtn"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_below="@+id/editBtn"
                android:layout_alignStart="@+id/editBtn"
                android:layout_alignEnd="@+id/editBtn"
                android:layout_marginTop="4dp"
                android:background="@drawable/floating_textred"
                android:gravity="center"
                android:text="Delete"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>