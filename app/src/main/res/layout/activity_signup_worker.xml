<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:padding="24dp"
    tools:context=".SignupWorkerActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/floating_backshapeblue"
                android:contentDescription="@string/backButton"
                android:src="@drawable/baseline_arrow_back_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/createAccount"
                android:textColor="@color/primary_blue"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/supportWorkerSignUp"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/customerTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/customerSignUp"
                android:textColor="@color/primary_blue"
                android:textSize="18sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/emailAddEt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/floating_edittextsoftblue"
                android:drawablePadding="8dp"
                android:hint="@string/emailaddHint"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/passwordEt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/floating_edittextsoftblue"
                android:drawablePadding="8dp"
                android:hint="@string/passwordHint"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/retypePasswordEt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/floating_edittextsoftblue"
                android:drawablePadding="8dp"
                android:hint="@string/retypePassword"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/firstNameEt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/floating_edittextsoftblue"
                android:drawablePadding="8dp"
                android:hint="@string/firstnameHint"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/middleNameEt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/floating_edittextsoftblue"
                android:drawablePadding="8dp"
                android:hint="@string/middlenameHint"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/lastNameEt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/floating_edittextsoftblue"
                android:drawablePadding="8dp"
                android:hint="@string/lastnameHint"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/birthDateEt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/floating_edittextsoftblue"
                android:drawablePadding="8dp"
                android:hint="@string/birthDateHint"
                android:imeOptions="actionNext"
                android:inputType="date"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/phoneNumberEt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/floating_edittextsoftblue"
                android:drawablePadding="8dp"
                android:hint="@string/mobilnoHint"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/landlineNumberEt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/floating_edittextsoftblue"
                android:drawablePadding="8dp"
                android:hint="@string/landlinenoHint"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/addressEt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/floating_edittextsoftblue"
                android:drawablePadding="8dp"
                android:hint="@string/addressHint"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/cityEt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/floating_edittextsoftblue"
                android:drawablePadding="8dp"
                android:hint="@string/cityHint"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/serviceEt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/floating_edittextsoftblue"
                android:drawablePadding="8dp"
                android:hint="@string/servicesHint"
                android:imeOptions="actionNext"
                android:inputType="none"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black"
                android:drawableEnd="@android:drawable/arrow_down_float"/>

            <Button
                android:id="@+id/clearanceBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/floating_edittextwhite"
                android:drawablePadding="8dp"
                android:hint="@string/barangayClearanceHint"
                android:textColorHint="@color/primary_blue"
                android:imeOptions="actionNext"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/signupBtn"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/primary_blue"
                android:text="@string/signup"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

    <!-- Email verification section -->
    <LinearLayout
        android:id="@+id/emailVerificationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/emailVerificationPrompt"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/resendVerificationTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/resendVerification"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue"/>

        <Button
            android:id="@+id/backToLoginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="@string/backToLogin"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>